{
  "name": "martian-robots",
  "version": "1.0.0",
  "description": "An HTML5/ES6 implementation of the Red Badger coding challenge. Soon to use React!",
  "main": "bundle.js",
  "directories": {
    "test": "./test"
  },
  "scripts": {
      "dev": "webpack-dev-server -d --watch --progress --colors --config 'webpack.config.js'",
      "test": "webpack-dev-server 'mocha!./test/cover-tests.js' 'mocha!./test/instructionreader-test.js' 'mocha!./test/robot-test.js' --output-file test.js -d --watch --colors --progress --display-error-details --display-reasons --config 'webpack.config.testing.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Paulonov/coding-challenge-js"
  },
  "author": "Paul Roper",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Paulonov/coding-challenge-js/issues"
  },
  "homepage": "https://github.com/Paulonov/coding-challenge-js",
  "devDependencies": {
    "babel-core": "^5.3.1",
    "babel-loader": "^5.0.0",
    "chai": "^2.3.0",
    "coverjs-loader": "^0.5.0",
    "css-loader": "^0.12.0",
    "eslint-loader": "^0.11.2",
    "mocha-loader": "^0.7.1",
    "style-loader": "^0.12.2",
    "webpack": "^1.9.5",
    "webpack-dev-server": "^1.8.2"
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions": true,
      "jsx": true
    },
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "semi": 2,
      "global-strict": false,
      "no-unused-vars": false,
      "no-alert": false,
      "no-console": false,
      "no-underscore-dangle": false,
      "no-undef": false
    }
  }
}
